<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ablecloud.matrix.app.demo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="ablecloud.matrix.app.demo.MainApplication">
        <activity
            android:name="ablecloud.matrix.app.demo.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="ablecloud.matrix.app.demo.LocalDeviceListActivity"
            android:screenOrientation="portrait"
            android:label="@string/local_device_list" />

        <activity
            android:name="ablecloud.matrix.app.demo.DeviceListActivity"
            android:screenOrientation="portrait"
            android:label="@string/cloud_device_list" />
    </application>

</manifest>