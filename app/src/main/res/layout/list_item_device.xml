<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <variable
            name="position"
            type="java.lang.Integer" />

        <variable
            name="physicalDeviceId"
            type="java.lang.String" />

        <variable
            name="data"
            type="java.lang.String" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="?android:attr/listPreferredItemPaddingStart"
        android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
        android:minHeight="?android:attr/listPreferredItemHeightSmall">

        <TextView
            android:id="@+id/position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/physical_id"
            tool:text="position"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@{String.valueOf(position)}" />

        <TextView
            android:id="@+id/physical_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/data_area"
            app:layout_constraintLeft_toRightOf="@+id/position"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_weight="1"
            tool:text="physical_id"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@{@string/physical_label(physicalDeviceId)}" />

        <TextView
            android:id="@+id/data_area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:layout_constraintTop_toBottomOf="@+id/physical_id"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/physical_id"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_weight="1"
            tool:text="data"
            android:textAppearance="?android:attr/textAppearance"
            android:text="@{@string/data_label(data)}" />
    </android.support.constraint.ConstraintLayout>
</layout>
