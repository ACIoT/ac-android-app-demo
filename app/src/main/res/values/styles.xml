<resources>

    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimaryDeep</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryGreen</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <!-- Custom -->
        <item name="status_offline">@color/colorPrimaryLight</item>
        <item name="status_local">@color/colorPrimaryPurple</item>
        <item name="status_cloud">@color/colorPrimaryPurple</item>
        <item name="status_both">@color/colorPrimaryGreen</item>
    </style>

    <style name="Base.AppTheme.Light" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryGray</item>
        <item name="colorAccent">@color/colorPrimaryDeep</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/colorPrimaryLight</item>
        <!-- Custom -->
        <item name="status_offline">@color/colorPrimaryLight</item>
        <item name="status_local">@color/colorPrimaryPurple</item>
        <item name="status_cloud">@color/colorPrimaryPurple</item>
        <item name="status_both">@color/colorPrimaryGreen</item>
    </style>

    <style name="AppTheme" parent="Base.AppTheme.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTitleSize">0dp</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
